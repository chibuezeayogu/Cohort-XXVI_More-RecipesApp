{
  "name": "more-recipes",
  "version": "1.0.0",
  "description": "More-Recipes provides a platform for users to share the awesome and exciting recipe ideas they have invented or learnt.",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist-server/app.js",
    "build:client": "webpack --config webpack.config.prod.js",
    "build:server": "babel -d ./dist-server ./server -s",
    "dev:client": "webpack --config webpack.config.dev.js --watch",
    "dev:server": "nodemon --watch server --exec babel-node -- server/app.js",
    "start:dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "test:db:migrate": "NODE_ENV=test sequelize db:migrate:undo:all && NODE_ENV=test sequelize db:migrate",
    "test:db:seed": "NODE_ENV=test sequelize db:seed:all",
    "start:test:db": "npm run test:db:migrate && npm run test:db:seed",
    "test:server": "npm run start:test:db && NODE_ENV=test nyc mocha ./test/**/*.js --timeout 20000",
    "test-b": "SET NODE_ENV=test && nyc --reporter=html mocha --compilers js:babel-core/register ./test/apiTest/user.spec.js --timeout 20000",
    "migrate-test": "NODE_ENV=test sequelize db:migrate",
    "heroku-postbuild": "npm run build:client && npm run build:server",
    "test:client": "jest /client --coverage --collectCoverageFrom=client/**/**/*.{js,jsx}",
    "start:e2e:server": "NODE_ENV=test concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "test:e2e": "NODE_ENV=test npm rum test:db:migrate && nightwatch"
  },
  "author": "Chibueze Ayogu",
  "license": "MIT",
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ]
  },
  "jest": {
    "verbose": true,
    "roots": [
      "./client"
    ],
    "setupTestFrameworkScriptFile": "./client/__tests__/testSetup.js",
    "testPathIgnorePatterns": [
      "client/__tests__/__mock__",
      "client/__tests__/testSetup.js"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ]
  },
  "dependencies": {
    "axios": "^0.17.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "6.2.4",
    "babel-plugin-react-display-name": "2.0.0",
    "babel-polyfill": "^6.8.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "6.5.0",
    "babel-preset-react-hmre": "1.1.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "6.8.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.2",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "chi": "0.0.10",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.5",
    "css-loader": "0.23.1",
    "dotenv": "^4.0.0",
    "dotenv-webpack": "^1.5.4",
    "express": "^4.15.4",
    "express-jwt": "^5.3.0",
    "express-validator": "^4.1.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^0.8.5",
    "history": "^3.0.0",
    "html-webpack-plugin": "^2.30.1",
    "http-server": "^0.10.0",
    "jquery": "2.2.3",
    "jsonwebtoken": "^8.1.1",
    "lodash": "^4.17.4",
    "mocha": "^3.5.0",
    "moment": "^2.20.1",
    "morgan": "^1.8.2",
    "node-sass": "^4.6.0",
    "nodemailer": "^4.4.2",
    "nodemon": "^1.11.0",
    "nyc": "^11.2.1",
    "pg": "^7.2.0",
    "pg-hstore": "^2.3.2",
    "prop-types": "^15.5.7",
    "rc-pagination": "^1.14.0",
    "react": "^15.6.0",
    "react-dom": "^15.5.0",
    "react-materialize": "^1.0.17",
    "react-redux": "4.4.5",
    "react-router": "^3.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^4.0.4",
    "redux": "3.5.2",
    "redux-saga": "^0.15.0",
    "redux-saga-test-plan": "^3.3.1",
    "sass-loader": "^6.0.6",
    "sequelize": "^4.7.5",
    "sequelize-cli": "^2.8.0",
    "standard": "^10.0.3",
    "style-loader": "0.13.1",
    "sweetalert": "^2.1.0",
    "url-loader": "^0.5.7",
    "validate-password": "^1.0.4",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "2.10.0",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "assert": "^1.4.1",
    "axios-mock-adapter": "^1.12.0",
    "cheerio": "0.22.0",
    "compression": "1.6.1",
    "concurrently": "^3.5.1",
    "enzyme": "^2.2.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "eslint-watch": "2.1.11",
    "eventsource-polyfill": "0.9.6",
    "expect": "^22.1.0",
    "jest": "^22.1.4",
    "jsdom": "8.5.0",
    "nock": "8.0.0",
    "npm-run-all": "1.8.0",
    "open": "0.0.5",
    "react-addons-test-utils": "^15.4.0",
    "react-test-renderer": "^15.6.2",
    "redux-immutable-state-invariant": "1.2.3",
    "redux-mock-store": "1.0.2",
    "rimraf": "2.5.2"
  }
}
